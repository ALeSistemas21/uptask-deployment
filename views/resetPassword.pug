doctype html
html(lang="en")
    include partials/header 
    body.login
        .contenedor-formulario 
            h1= nombrePagina
             if locals.mensajes  
                .alerta 
                    each categoria in Object.keys(locals.mensajes) 
                        each error in mensajes [categoria]
                            .alerta(class=`${categoria}`)
                                p= error
             

            p Coloca tu nueva contraseña
                        
                form.caja-login(method='POST' action='' )
                    .campo 
                        label(for='password') E-mail: 
                        input(type="password" name='password' placeHolder='Nueva contraseña' value= email required)
                                                            
                    .campo.enviar 
                        input.boton(type='submit' value='Restablecer contraseña')

                   
